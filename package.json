  "dependencies": {
    "@dotenvx/dotenvx": "^1.9.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-digitalbazaar": "^5.0.1",
    "eslint-plugin-jsdoc": "^48.1.0",
    "eslint-plugin-unicorn": "^51.0.1",
